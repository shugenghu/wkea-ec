{
    "name": "@msdyn365-commerce-modules/retail-actions",
    "version": "9.24.14",
    "license": "SEE LICENSE IN LICENSE.md",
    "description": "Core Data Action Library for MsDyn365",
    "main": "dist/lib/index.js",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "npm-run-all tsc-build copy-mocks-yarn",
        "build:prod": "npm-run-all tsc-build copy-mocks-yarn",
        "tsc-build": "yarn tsc -p ./tsconfig.json",
        "copy-mocks-yarn": "yarn copy-mocks",
        "clean": "yarn rimraf dist",
        "format": "yarn prettier **/**.{ts,tsx}",
        "format:fix": "yarn prettier **/**.{ts,tsx} --write",
        "lint": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --format stylish",
        "lint:fix": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --fix --format stylish",
        "precommit": "lint-staged",
        "rebuild": "npm-run-all clean build",
        "start": "npm-run-all copy-mocks-yarn tsc-watch",
        "tsc-watch": "yarn tsc -p ./tsconfig.json --watch",
        "test": "yarn jest",
        "test:ci": "yarn jest --ci",
        "debug-tests": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --collectCoverage=false",
        "copy-mocks": "yarn copyfiles -f -s **/*.actionmock.json dist/mocks"
    },
    "author": "",
    "dependencies": {
        "@msdyn365-commerce/commerce-entities": "9.24.14",
        "@msdyn365-commerce/global-state": "9.24.14",
        "@msdyn365-commerce-modules/data-types": "9.24.14",
        "@msdyn365-commerce/bootloader": "^1.0.0",
        "@types/js-cookie": "^2.2.0",
        "axios": "^0.18.0",
        "js-cookie": "^2.2.0",
        "react": "16.9.0",
        "semver": "^5.6.0",
        "tslib": "^1.9.3",
        "universal-cookie": "^3.0.4"
    },
    "devDependencies": {
        "@msdyn365-commerce/tslint-rules": "^1.0.0",
        "@types/jest": "24.0.9",
        "@types/nock": "^9.3.0",
        "@types/node": "^10.9.2",
        "@types/react": "16.9.0",
        "@types/sinon": "^7.0.3",
        "@types/semver": "^5.5.0",
        "copyfiles": "2.4.0",
        "husky": "^1.3.1",
        "jest": "24.1.0",
        "jest-junit": "^6.3.0",
        "lint-staged": "7.3.0",
        "nock": "^10.0.6",
        "prettier": "^1.15.3",
        "rimraf": "^2.6.3",
        "sinon": "^7.2.2",
        "ts-jest": "24.0.0",
        "tslint": "^5.12.1",
        "typescript": "^3.2.1"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn format:fix",
            "yarn lint:fix",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "jest": {
        "preset": "@msdyn365-commerce/cli-internal"
    }
}
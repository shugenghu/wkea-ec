{
    "name": "@msdyn365-commerce-modules/search",
    "version": "9.24.16",
    "license": "SEE LICENSE IN LICENSE.md",
    "main": "dist/lib/index.js",
    "module": "dist/index.es5.js",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "yarn build-package",
        "build:prod": "yarn build",
        "build-legacy": "yarn razzle build",
        "debug": "yarn msdyn365b --inspect-brk",
        "debug-tests": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --collectCoverage=false",
        "clean": "yarn rimraf build dist lib",
        "format": "yarn prettier es5 src/**/**.{ts,tsx}",
        "format:fix": "yarn prettier es5 src/**/**.{ts,tsx} --write",
        "lint": "yarn lint-package",
        "lint:fix": "yarn lint-package --fix",
        "prebuild": "yarn clean",
        "precommit": "lint-staged",
        "prestart": "yarn clean",
        "scss-hack": "node ..\\..\\scripts\\build-scss.js",
        "start": "yarn msdyn365b start",
        "start-legacy": "yarn razzle start",
        "test": "yarn jest",
        "test:ci": "yarn jest --ci"
    },
    "devDependencies": {
        "@types/enzyme": "^3.1.14",
        "@types/jest": "24.0.9",
        "@types/react": "16.9.0",
        "@types/react-dom": "16.9.0",
        "@types/react-test-renderer": "^16.0.2",
        "babel-plugin-universal-import": "^3.1.2",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.4",
        "jest-junit": "^6.3.0",
        "jest": "24.1.0",
        "lint-staged": "7.3.0",
        "prettier": "^1.15.2",
        "react-test-renderer": "^16.4.2",
        "rimraf": "^2.6.2",
        "testcafe": "^1.0.0",
        "testcafe-reporter-junit": "^3.0.0",
        "ts-jest": "24.0.0",
        "tslint": "^5.11.0",
        "tslint-react": "4.0.0",
        "typescript": "^3.2.1"
    },
    "dependencies": {
        "@msdyn365-commerce/commerce-entities": "9.24.16",
        "@msdyn365-commerce/components": "9.24.16",
        "@msdyn365-commerce-modules/bopis-utilities": "9.24.16",
        "@msdyn365-commerce-modules/data-types": "9.24.16",
        "@msdyn365-commerce-modules/search-utilities": "9.24.16",
        "@msdyn365-commerce-modules/utilities": "9.24.16",
        "@msdyn365-commerce/bootloader": "^1.0.0",
        "identity-obj-proxy": "^3.0.0",
        "tslib": "^1.9.3"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn format:fix",
            "yarn lint:fix",
            "git add"
        ]
    },
    "jest": {
        "preset": "@msdyn365-commerce/cli-internal",
        "setupFiles": [
            "<rootDir>/src/jest-setup.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "coverageReporters": [
            "text",
            "lcov",
            "cobertura"
        ],
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/index.ts",
            "!src/common/*.tsx",
            "!src/modules/search/actions/*.ts",
            "!src/modules/search/*.autogenerated.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        },
        "collectCoverage": true
    }
}
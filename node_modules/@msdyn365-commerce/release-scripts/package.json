{
    "name": "@msdyn365-commerce/release-scripts",
    "version": "1.25.17",
    "description": "Release and Verification related teasks",
    "main": "dist/lib/index.js",
    "license": "LICENSE IN README",
    "scripts": {
        "build": "npm-run-all compile copy-schema",
        "build:prod": "yarn build",
        "compile": "yarn tsc -p tsconfig.json",
        "compile:watch": "yarn tsc -p tsconfig.json --watch",
        "clean": "yarn rimraf dist",
        "debug-tests": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --collectCoverage=false",
        "format": "yarn prettier es5 src/**/**.{ts,tsx}",
        "format:fix": "yarn prettier es5 src/**/**.{ts,tsx} --write",
        "lint": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --format stylish",
        "lint:fix": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --fix --format stylish",
        "precommit": "lint-staged",
        "start": "npm-run-all copy-schema compile:watch",
        "test": "yarn jest",
        "test:ci": "yarn jest --ci",
        "copy-schema": "yarn copyfiles -s -u=1 src/**/*.schema.json dist/lib"
    },
    "dependencies": {
        "@msdyn365-commerce/utilities-internal": "1.25.17",
        "copyfiles": "^2.1.0",
        "jsonschema": "^1.2.4",
        "tslib": "^1.9.3"
    },
    "jest": {
        "preset": "../cli-internal/jest-preset"
    },
    "lint-staged": {
        "*.(j|t)s(x)?": [
            "yarn format:fix",
            "yarn lint:fix",
            "git add"
        ]
    },
    "devDependencies": {
        "@msdyn365-commerce/tslint-rules": "1.25.17",
        "@types/jest": "^24.0.11",
        "@types/node": "^10.12.9",
        "jest": "^24.7.1",
        "jest-junit": "^6.3.0",
        "lint-staged": "^8.1.5",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.15.3",
        "rimraf": "^2.6.2",
        "ts-jest": "^24.0.2",
        "tslint": "^5.16.0",
        "typescript": "^3.4.3"
    }
}
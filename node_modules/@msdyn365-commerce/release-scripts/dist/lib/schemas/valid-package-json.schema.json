{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "title": "Project Rushmore Package.json",
    "patternProperties": {
        "^(resolutions|peerDependencies)$": {
            "type": "object",
            "additionalProperties": false
        }
    },
    "properties": {
        "devDependencies": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "@fortawesome/fontawesome-free": {
                    "type": "string"
                },
                "@msdyn365-commerce/tslint-rules": {
                    "type": "string"
                },
                "@types/fs-extra": {
                    "type": "string"
                },
                "@types/jest": {
                    "type": "string"
                },
                "@types/node-fetch": {
                    "type": "string"
                },
                "@types/react": {
                    "type": "string"
                },
                "@types/react-dom": {
                    "type": "string"
                },
                "@types/react-test-renderer": {
                    "type": "string"
                },
                "@types/reactstrap": {
                    "type": "string"
                },
                "babel-plugin-universal-import": {
                    "type": "string"
                },
                "bootstrap": {
                    "type": "string"
                },
                "deep-equal": {
                    "type": "string"
                },
                "fs-extra": {
                    "type": "string"
                },
                "identity-obj-proxy": {
                    "type": "string"
                },
                "jest": {
                    "type": "string"
                },
                "jest-junit": {
                    "type": "string"
                },
                "lint-staged": {
                    "type": "string"
                },
                "node-fetch": {
                    "type": "string"
                },
                "prettier": {
                    "type": "string"
                },
                "pretty-quick": {
                    "type": "string"
                },
                "react-test-renderer": {
                    "type": "string"
                },
                "rimraf": {
                    "type": "string"
                },
                "testcafe": {
                    "type": "string"
                },
                "testcafe-reporter-junit": {
                    "type": "string"
                },
                "ts-jest": {
                    "type": "string"
                },
                "tslint": {
                    "type": "string"
                },
                "typescript": {
                    "type": "string"
                },
                "typeson": {
                    "type": "string"
                }
            }
        },
        "scripts": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "analyze",
                "analyze:prod",
                "add-module",
                "build",
                "build:prod",
                "clean",
                "debug",
                "format",
                "format:fix",
                "lint",
                "lint:fix",
                "precommit",
                "run-integration",
                "start",
                "start:prod"
            ],
            "properties": {
                "analyze": {
                    "enum": ["yarn cross-env ANALYZE_BUNDLE=true msdyn365b start"]
                },
                "analyze:prod": {
                    "enum": ["yarn cross-env ANALYZE_BUNDLE=true msdyn365b build"]
                },
                "add-module": {
                    "enum": ["yarn msdyn365 add-module module-created-by-cli"]
                },
                "build": {
                    "enum": ["yarn msdyn365b build"]
                },
                "build:prod": {
                    "enum": ["yarn build"]
                },
                "clean": {
                    "enum": ["yarn rimraf build lib dist .tmp gendef.lock"]
                },
                "debug": {
                    "enum": ["yarn msdyn365b debug"]
                },
                "format": {
                    "enum": ["yarn prettier **/**.{ts,tsx}"]
                },
                "format:fix": {
                    "enum": ["yarn pretty-quick --staged --pattern \"**/**.*(js|jsx|ts|tsx|json|css|scss|md)\""]
                },
                "lint": {
                    "enum": ["yarn tslint {src,test}/**/*.{ts,tsx} --project tsconfig.json --format stylish"]
                },
                "lint:fix": {
                    "enum": ["yarn tslint {src,test}/**/*.{ts,tsx} --project tsconfig.json --fix --format stylish"]
                },
                "precommit": {
                    "enum": ["lint-staged"]
                },
                "run-integration": {
                    "enum": ["yarn npm-run-all add-module integration"]
                },
                "start": {
                    "enum": ["yarn msdyn365b start local"]
                },
                "start:prod": {
                    "enum": ["yarn cross-env NODE_ENV=production node build/server.js"]
                }
            }
        },
        "dependencies": {
            "type": "object",
            "additionalProperties": false,
            "required": [
                "@msdyn365-commerce-modules/core-components",
                "@msdyn365-commerce-modules/data-types",
                "@msdyn365-commerce-modules/keystone-samples",
                "@msdyn365-commerce-modules/shared-components",
                "@msdyn365-commerce-theme/demo-theme-2",
                "@msdyn365-commerce-theme/custom-shared-components",
                "@msdyn365-commerce/action-internal",
                "@msdyn365-commerce/bootloader",
                "@msdyn365-commerce/build-scripts-internal",
                "@msdyn365-commerce/core-internal",
                "@msdyn365-commerce/retail-proxy",
                "axios",
                "cross-env",
                "mobx",
                "mobx-react",
                "reactstrap",
                "stack-trace",
                "tslib",
                "@msdyn365-commerce/telemetry-internal"
            ],
            "patternProperties": {
                "@msdyn365-commerce-modules/+": {
                    "type": "string",
                    "pattern": "^[^*].*$"
                }
            },
            "properties": {
                "@msdyn365-commerce-modules/core-components": {
                    "type": "string"
                },
                "@msdyn365-commerce-modules/data-types": {
                    "type": "string"
                },
                "@msdyn365-commerce-modules/keystone-samples": {
                    "type": "string"
                },
                "@msdyn365-commerce-modules/shared-components": {
                    "type": "string"
                },
                "@msdyn365-commerce-theme/demo-theme-2": {
                    "type": "string"
                },
                "@msdyn365-commerce-theme/custom-shared-components": {
                    "type": "string"
                },
                "@msdyn365-commerce/action-internal": {
                    "type": "string"
                },
                "@msdyn365-commerce/bootloader": {
                    "type": "string"
                },
                "@msdyn365-commerce/build-scripts-internal": {
                    "type": "string"
                },
                "@msdyn365-commerce/core-internal": {
                    "type": "string"
                },
                "@msdyn365-commerce/retail-proxy": {
                    "type": "string"
                },
                "axios": {
                    "type": "string"
                },
                "cross-env": {
                    "type": "string"
                },
                "mobx": {
                    "type": "string"
                },
                "mobx-react": {
                    "type": "string"
                },
                "reactstrap": {
                    "type": "string"
                },
                "stack-trace": {
                    "type": "string"
                },
                "tslib": {
                    "type": "string"
                },
                "@msdyn365-commerce/telemetry-internal": {
                    "type": "string"
                }
            }
        }
    }
}

{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "JSON schema for style preset settings",
    "type": "object",
    "additionalItems": false,
    "additionalProperties": false,
    "properties": {
        "$ref": {
            "minLength": 2,
            "type": "string"
        },
        "$type": {
            "$ref": "#/definitions/$type"
        },
        "name": {
            "$ref": "#/definitions/name"
        },
        "friendlyName": {
            "$ref": "#/definitions/friendlyName"
        },
        "description": {
            "$ref": "#/definitions/description"
        },
        "global": {
            "$ref": "#/definitions/global"
        },
        "modules": {
            "$ref": "#/definitions/modules"
        }
    },
    "oneOf": [
        {
            "required": [
                "$ref",
                "name"
            ]
        },
        {
            "required": [
                "$type",
                "name",
                "global"
            ]
        }
    ],
    "definitions": {
        "$type": {
            "type": "string",
            "title": "Definition type",
            "pattern": "styleDefinition"
        },
        "name": {
            "type": "string",
            "title": "Theme name"
        },
        "friendlyName": {
            "type": "string",
            "title": "Friendly theme name"
        },
        "description": {
            "type": "string",
            "title": "Theme description"
        },
        "commonProperties": {
            "type": "object",
            "properties": {
                "friendlyName": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "string"
                    ]
                },
                "enum": {
                    "patternProperties": {
                        ".+": {
                            "type": "string"
                        }
                    },
                    "propertyNames": {
                        "pattern": "^[_A-Za-z0-9]*$"
                    },
                    "type": "object",
                    "uniqueItems": true
                },
                "format": {
                    "type": "string"
                },
                "group": {
                    "type": "string"
                },
                "default": {
                    "type": "string"
                }
            },
            "required": [
                "friendlyName",
                "description",
                "type"
            ]
        },
        "global": {
            "type": "object",
            "title": "Defines the properties for global style",
            "additionalItems": false,
            "additionalProperties": true,
            "patternProperties": {
                ".+": {
                    "allOf": [
                        {
                            "$ref": "#/definitions/commonProperties"
                        }
                    ]
                }
            }
        },
        "modules": {
            "type": "object",
            "title": "Defines the properties for modules style",
            "additionalItems": true,
            "additionalProperties": true,
            "patternProperties": {
                ".+": {
                    "additionalProperties": true,
                    "patternProperties": {
                        ".+": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/commonProperties"
                                }
                            ]
                        }
                    }
                }
            }
        }
    }
}
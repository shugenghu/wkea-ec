{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "JSON schema for connectors",
  "type": "object",
  "definitions": {
    "$type": {
      "type": "string",
      "title": "Connector type. Possible values include 'experimentationConnector'.",
      "enum": ["experimentationConnector", "geoLookupConnector"]
    },
    "name": {
      "type": "string",
      "title": "Connector name"
    },
    "description": {
      "type": "string",
      "title": "Connector description"
    },
    "configSchema": {
      "description": "Defines a JSON schema for the expected config that should be provided to the connector via connector.settings.json",
      "type": "object"
    }
  },
  "oneOf": [
    {
      "additionalItems": false,
      "additionalProperties": false,
      "properties": {
        "$type": {
          "$ref": "#/definitions/$type"
        },
        "name": {
          "$ref": "#/definitions/name"
        },
        "description": {
          "$ref": "#/definitions/description"
        },
        "configSchema": {
          "$ref": "#/definitions/configSchema"
        }
      },
      "required": [
        "$type",
        "name",
        "description"
      ]
    }
  ]
}

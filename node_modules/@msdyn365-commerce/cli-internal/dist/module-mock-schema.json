{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "JSON schema for module definition",
    "type": "object",
    "properties": {
        "id": { "$ref": "#/definitions/id" },
        "typeName": { "$ref": "#/definitions/typeName" },
        "config": { "$ref": "#/definitions/setting" }
    },
    "required": [
        "id",
        "typeName"
    ],
    "additionalProperties": false,
    "definitions": {
        "id": {
            "type": "string",
            "description": "Id that gets displayed"
        },
        "typeName": {
            "type": "string",
            "description": "TypeName that gets displayed"
        },
        "setting": {
            "type": "object",
            "uniqueItems": true,
            "propertyNames": {
              "pattern": "^[a-z][_A-Za-z0-9]*$|ref$"
            },
            "patternProperties": {
              ".+": {
                        "type": ["object", "string"]
                }                              
            }
        }
    }
}
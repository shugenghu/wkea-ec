{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "JSON schema for app settings",
    "type": "object",
    "additionalItems": false,
    "additionalProperties": true,
    "properties": {
        "config": {
            "$ref": "./definition-schema.json#/definitions/config"
        },
        "routes": {
            "$ref": "#/definitions/routes"
        },
        "themes": {
            "$ref": "#/definitions/themes"
        },
        "contentSecurityPolicy": {
            "$ref": "./definition-schema.json#/definitions/config"
        }
    },
    "required": [
        "routes",
        "config"
    ],
    "definitions": {
        "routes": {
            "type": "object",
            "uniqueItems": true,
            "additionalItems": false,
            "additionalProperties": false,
            "description": "Page Route Definitions",
            "propertyNames": {
                "pattern": "^[a-z][A-Za-z0-9]*$"
            },
            "patternProperties": {
                ".+": {
                    "additionalItems": false,
                    "additionalProperties": false,
                    "properties": {
                        "friendlyName": {
                            "type": "string",
                            "description": "Friendly name of the route for the authoring tool"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the route for the authoring tool"
                        }
                    },
                    "required": [
                        "friendlyName"
                    ]
                }
            }
        },
        "themes": {
            "type": "object",
            "uniqueItems": true,
            "additionalItems": false,
            "additionalProperties": false,
            "description": "Definition for theme",
            "propertyNames": {
                "pattern": "^[a-z][A-Za-z0-9-_]*$",
                "description": "The key should match the name of the theme"
            },
            "patternProperties": {
                ".+": {
                    "additionalItems": false,
                    "additionalProperties": false,
                    "properties": {
                        "friendlyName": {
                            "type": "string",
                            "description": "Friendly name of the theme for the authoring tool to display"
                        },
                        "description": {
                            "type": "string",
                            "description": "Description of the theme for the authoring tool to display"
                        }
                    },
                    "required": [
                        "friendlyName"
                    ]
                }
            }
        }
    }
}
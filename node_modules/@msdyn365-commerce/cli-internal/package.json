{
    "name": "@msdyn365-commerce/cli-internal",
    "version": "1.25.17",
    "description": "",
    "scripts": {
        "build": "yarn npm-run-all clean build-node ts",
        "build-node": "node ./build.js",
        "build:prod": "yarn npm-run-all ts build-node",
        "clean": "yarn rimraf dist",
        "format": "yarn prettier **/**.{js,ts,tsx} !dist/** --write",
        "format:fix": "yarn prettier **/**.{js,ts,tsx} !dist/** --write",
        "lint": "yarn tslint scripts/**/*.{ts,tsx} --project tsconfig.json --format stylish",
        "lint:fix": "yarn tslint scripts/**/*.{ts,tsx} --project tsconfig.json --fix --format stylish",
        "precommit": "lint-staged",
        "start": "yarn npm-run-all ts:watch build-node",
        "test": "yarn jest",
        "test:ci": "yarn jest --ci",
        "ts": "yarn tsc -p ./tsconfig.json",
        "ts:watch": "yarn tsc --watch -p ./tsconfig.json"
    },
    "files": [
        "src",
        "dist/**",
        "jest*"
    ],
    "bin": {
        "msdyn365": "./dist/cli.js"
    },
    "main": "./dist/cli.js",
    "license": "ISC",
    "devDependencies": {
        "@msdyn365-commerce/definition-generator-internal": "1.25.17",
        "@msdyn365-commerce/tslint-rules": "1.25.17",
        "@types/archiver": "2.1.2",
        "@types/chalk": "2.2.0",
        "@types/fs-extra": "^5.0.4",
        "@types/jest": "^24.0.11",
        "@types/klaw-sync": "^2.0.0",
        "@types/log-symbols": "^2.0.0",
        "@types/node": "^10.12.9",
        "@types/react": "16.9.0",
        "@types/semver": "^6.0.0",
        "@types/temp": "^0.8.34",
        "@types/yargs": "^12.0.4",
        "jest": "^24.7.1",
        "jest-junit": "^6.3.0",
        "lint-staged": "^8.1.5",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.15.3",
        "rimraf": "^2.6.3",
        "ts-jest": "^24.0.2",
        "tslint": "^5.16.0",
        "typescript": "^3.4.3"
    },
    "dependencies": {
        "@msdyn365-commerce/cli-template-internal": "1.25.17",
        "@msdyn365-commerce/utilities-internal": "1.25.17",
        "dotenv": "^8.2.0",
        "archiver": "3.0.0",
        "fs-extra": "^7.0.1",
        "jsonschema": "^1.2.4",
        "klaw-sync": "^4.0.0",
        "lodash": "^4.17.11",
        "log-symbols": "^2.2.0",
        "replace-in-file": "^3.4.0",
        "semver": "^6.1.1",
        "temp": "^0.9.0",
        "yargs": "^13.2.2"
    },
    "engines": {
        "node": ">= 10.x.x"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "yarn format:fix",
            "yarn lint:fix",
            "git add"
        ]
    }
}
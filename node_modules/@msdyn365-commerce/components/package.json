{
    "name": "@msdyn365-commerce/components",
    "version": "9.24.16",
    "license": "SEE LICENSE IN LICENSE.md",
    "main": "dist/lib/index.js",
    "types": "dist/types/index.d.ts",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsc -p ./tsconfig.json",
        "debug-tests": "node --inspect-brk ../../node_modules/jest/bin/jest.js --runInBand --collectCoverage=false",
        "clean": "yarn rimraf build dist lib",
        "format": "yarn prettier es5 src/**/**.{ts,tsx}",
        "format:fix": "yarn prettier es5 src/**/**.{ts,tsx} --write",
        "lint": "yarn lint-package",
        "lint:fix": "yarn lint-package --fix",
        "prebuild": "yarn clean",
        "precommit": "lint-staged",
        "prestart": "yarn clean",
        "test": "yarn jest",
        "test:ci": "yarn jest --ci"
    },
    "devDependencies": {
        "@types/jest": "24.0.9",
        "@types/react": "16.9.0",
        "@types/react-dom": "16.9.0",
        "@types/react-test-renderer": "^16.0.2",
        "babel-plugin-universal-import": "^3.1.2",
        "jest-junit": "^6.3.0",
        "jest": "24.1.0",
        "lint-staged": "7.3.0",
        "prettier": "^1.15.2",
        "react-test-renderer": "^16.4.2",
        "rimraf": "^2.6.2",
        "testcafe": "^1.0.0",
        "testcafe-reporter-junit": "^3.0.0",
        "ts-jest": "24.0.0",
        "tslint": "^5.11.0",
        "tslint-react": "4.0.0",
        "typescript": "^3.2.1"
    },
    "dependencies": {
        "@msdyn365-commerce/core": "^1.0.0",
        "@msdyn365-commerce/bootloader": "^1.0.0",
        "@msdyn365-commerce-modules/utilities": "9.24.16",
        "identity-obj-proxy": "^3.0.0",
        "tslib": "^1.9.3"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn format:fix",
            "yarn lint:fix",
            "git add"
        ]
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!src/**/*.test.tsx",
            "!src/**/*.test-ssr.tsx"
        ],
        "coverageReporters": [
            "text",
            "lcov",
            "cobertura"
        ],
        "testMatch": [
            "<rootDir>/src/**/*(*.)(spec|test|test-ssr).(ts|js)?(x)"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 71,
                "functions": 71,
                "lines": 71,
                "statements": 71
            }
        },
        "coveragePathIgnorePatterns": [
            "ttml-context.ts",
            "ttml-parser.ts",
            "ttml-settings.ts",
            "ttml-time-parser.ts",
            "player-utility.ts"
        ],
        "preset": "@msdyn365-commerce/cli-internal",
        "setupFiles": [
            "<rootDir>/src/jest-setup.js"
        ],
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ]
    }
}
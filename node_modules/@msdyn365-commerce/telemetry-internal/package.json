{
    "name": "@msdyn365-commerce/telemetry-internal",
    "version": "1.27.15",
    "scripts": {
        "build": "yarn tsc -p tsconfig.json",
        "build:prod": "yarn build",
        "clean": "yarn rimraf dist",
        "debug-tests": "node --inspect-brk ../../node_modules/jest/bin/jest.js --runInBand --collectCoverage=false",
        "format": "yarn prettier es5 src/**/**.{ts,tsx}",
        "format:fix": "yarn pretty-quick --staged --pattern \"**/**.*(js|jsx|ts|tsx|json|css|scss|md)\"",
        "lint": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --format stylish",
        "lint:fix": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --fix --format stylish",
        "precommit": "lint-staged",
        "start": "yarn tsc -p tsconfig.json --watch",
        "test": "yarn jest",
        "test:ci": "yarn jest --ci"
    },
    "description": "Telemetry package containing some basic implementations",
    "dependencies": {
        "applicationinsights": "^1.8",
        "applicationinsights-js": "^1.0.20",
        "js-sha256": "^0.9.0",
        "tslib": "^1.9.3",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "@msdyn365-commerce/tslint-rules": "1.27.15",
        "@types/applicationinsights-js": "^1.0.9",
        "@types/fs-extra": "^5.0.4",
        "@types/jest": "^24.0.11",
        "@types/node": "^10.12.9",
        "@types/node-sass": "^3.10.32",
        "jest": "^24.7.1",
        "jest-junit": "^6.3.0",
        "lint-staged": "^8.1.5",
        "prettier": "^1.15.3",
        "pretty-quick": "^1.8.0",
        "rimraf": "^2.6.2",
        "ts-jest": "^24.0.2",
        "tslint": "^5.16.0",
        "typescript": "^3.4.3"
    },
    "engines": {
        "node": ">= 10.x.x"
    },
    "jest": {
        "preset": "../cli-internal/jest-preset"
    },
    "license": "MIT",
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn format:fix",
            "yarn lint:fix",
            "git add"
        ]
    },
    "main": "dist/lib/index.js",
    "typings": "dist/types/index.d.ts"
}
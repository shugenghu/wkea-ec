{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "incremental": true,
        "inlineSources": true,
        "jsx": "react",
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist/lib",
        "sourceMap": true,
        "strict": true,
        "target": "esnext",
        "types": ["node", "jest"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}

{
    "name": "@msdyn365-commerce/build-scripts-internal",
    "version": "1.27.15",
    "bin": {
        "build-package": "./dist/lib/build-package.js",
        "lint-package": "./dist/lib/lint-package.js"
    },
    "scripts": {
        "build": "npm-run-all compile build-node",
        "build-node": "node ./build.js",
        "build:prod": "yarn build",
        "clean": "yarn rimraf dist",
        "compile": "yarn tsc -p tsconfig.json",
        "debug-tests": "node --inspect-brk ../../node_modules/jest/bin/jest.js --runInBand --collectCoverage=false",
        "format": "yarn prettier **/**.{js,ts,tsx} !dist/** --write",
        "format:fix": "yarn pretty-quick --staged --pattern \"**/**.*(js|jsx|ts|tsx|json|css|scss|md)\"",
        "lint": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --format stylish",
        "lint:fix": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --fix --format stylish",
        "precommit": "lint-staged",
        "start": "yarn tsc -p ./tsconfig.json --watch",
        "test": "yarn jest",
        "test:ci": "yarn jest --ci"
    },
    "dependencies": {
        "@msdyn365-commerce/cli-internal": "1.27.15",
        "@msdyn365-commerce/definition-generator-internal": "1.27.15",
        "@msdyn365-commerce/theming-internal": "1.27.15",
        "@msdyn365-commerce/tslint-rules": "1.27.15",
        "@msdyn365-commerce/utilities-internal": "1.27.15",
        "chalk": "2.4.2",
        "fs-extra": "^7.0.0",
        "glob": "^7.1.3",
        "jsonschema": "^1.3.0",
        "lodash": "^4.17.11",
        "node-sass": "^4.10.0",
        "tslib": "^1.9.3"
    },
    "description": "Contains commonly used scripts used to build/run keystone modules",
    "devDependencies": {
        "@types/chalk": "2.2.0",
        "@types/fs-extra": "^5.0.4",
        "@types/jest": "^24.0.11",
        "@types/lodash": "^4.14.119",
        "@types/node": "^10.12.9",
        "@types/node-sass": "^3.10.32",
        "babel-jest": "^24.7.1",
        "eslint-plugin-header": "^3.0.0",
        "jest": "^24.7.1",
        "jest-junit": "^6.3.0",
        "lint-staged": "^8.1.5",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.15.3",
        "pretty-quick": "^1.8.0",
        "rimraf": "^2.6.2",
        "ts-jest": "^24.0.2",
        "tslint": "^5.16.0",
        "typescript": "^3.4.3"
    },
    "engines": {
        "node": ">= 10.x.x"
    },
    "files": [
        "dist/**"
    ],
    "license": "ISC",
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn format:fix",
            "yarn lint:fix",
            "git add"
        ],
        "exclude": "**/lib/*"
    },
    "main": "dist/lib/index.js",
    "typings": "dist/types/index.d.ts"
}
{
    "extends": ["eslint-config-standard", "eslint-config-prettier"],
    "env": {
        "node": true,
        "browser": true,
        "jest": true
    },
    "plugins": [
        "header"
    ],
    "rules": {
        "header/header": [
            2,
            "block",
            [
                "******************************************************************************",
                "* Copyright (c) Microsoft Corporation.",
                "* All rights reserved. See LICENSE in the project root for license information.",
                "******************************************************************************"
            ]
        ]
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    }
}
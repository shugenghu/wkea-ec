{
    "name": "@msdyn365-commerce/utilities-internal",
    "version": "1.27.15",
    "scripts": {
        "build": "yarn tsc -p tsconfig.json",
        "build:prod": "yarn build",
        "clean": "yarn rimraf dist",
        "format": "yarn prettier **/**.{js,ts,tsx} !dist/** --write",
        "format:fix": "yarn pretty-quick --staged --pattern \"**/**.*(js|jsx|ts|tsx|json|css|scss|md)\"",
        "lint": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --format stylish",
        "lint:fix": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --fix --format stylish",
        "precommit": "lint-staged",
        "start": "yarn tsc -p ./tsconfig.json --watch",
        "test": "yarn jest",
        "test:ci": "yarn jest --ci"
    },
    "author": "",
    "dependencies": {
        "@types/glob": "^7.1.1",
        "fs-extra": "^7.0.1",
        "glob": "^7.1.3",
        "json-schema-ref-parser": "6.0.2",
        "stack-trace": "0.0.10",
        "tslib": "^1.9.3",
        "axios": "^0.18.0"
    },
    "description": "Utilities package",
    "devDependencies": {
        "@msdyn365-commerce/tslint-rules": "1.27.15",
        "@types/chalk": "2.2.0",
        "@types/fs-extra": "^5.0.4",
        "@types/node": "^10.12.9",
        "lint-staged": "^8.1.5",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.15.3",
        "pretty-quick": "^1.8.0",
        "rimraf": "^2.6.2",
        "tslint": "^5.16.0",
        "typescript": "^3.4.3"
    },
    "engines": {
        "node": ">= 10.x.x"
    },
    "files": [
        "dist"
    ],
    "jest": {
        "preset": "../cli-internal/jest-preset"
    },
    "license": "ISC",
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "yarn format:fix",
            "yarn lint:fix",
            "git add"
        ]
    },
    "main": "dist/lib/index.js",
    "module": "dist/index.es5.js",
    "typings": "dist/types/index.d.ts"
}
{
    "name": "@msdyn365-commerce/global-state",
    "version": "9.24.16",
    "license": "Copyright (c) Microsoft Corporation. All rights reserved. Licensed under the MIT License. See License.txt in the project root for license information.",
    "main": "dist/lib/index.js",
    "typings": "dist/types/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "npm-run-all tsc-build copy-mocks-yarn",
        "build:prod": "npm-run-all tsc-build copy-mocks-yarn",
        "tsc-build": "yarn tsc -p ./tsconfig.json",
        "copy-mocks-yarn": "yarn copy-mocks",
        "clean": "yarn rimraf dist",
        "format": "yarn prettier **/**.{ts,tsx}",
        "format:fix": "yarn prettier **/**.{ts,tsx} --write",
        "lint": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --format stylish",
        "lint:fix": "yarn tslint src/**/*.{ts,tsx} --project tsconfig.json --fix --format stylish",
        "precommit": "lint-staged",
        "rebuild": "npm-run-all clean build",
        "start": "npm-run-all copy-mocks-yarn tsc-watch",
        "tsc-watch": "yarn tsc -p ./tsconfig.json --watch",
        "test": "yarn jest",
        "test:ci": "yarn jest --ci",
        "debug-tests": "node --inspect-brk ../../node_modules/jest/bin/jest.js --runInBand --collectCoverage=false",
        "copy-mocks": "yarn copyfiles -f -s **/*.actionmock.json dist/lib"
    },
    "dependencies": {
        "@msdyn365-commerce/bootloader": "^1.0.0",
        "tslib": "^1.9.3"
    },
    "devDependencies": {
        "@types/jest": "24.0.9",
        "@types/node": "^10.9.2",
        "@types/react": "16.9.0",
        "typescript": "^3.2.1",
        "@types/sinon": "^7.0.3",
        "copyfiles": "2.4.0",
        "jest": "24.1.0",
        "jest-junit": "^6.3.0",
        "lint-staged": "7.3.0",
        "rimraf": "^2.6.3",
        "nock": "^10.0.6",
        "prettier": "^1.15.2",
        "sinon": "^7.2.2",
        "ts-jest": "24.0.0",
        "tslint": "^5.12.1",
        "tslint-react": "4.0.0"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn format:fix",
            "yarn lint:fix",
            "git add"
        ]
    },
    "jest": {
        "preset": "@msdyn365-commerce/cli-internal",
        "coverageReporters": [
            "text",
            "lcov",
            "cobertura"
        ],
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}",
            "!**/*/index.ts"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 100,
                "functions": 100,
                "lines": 100,
                "statements": 100
            }
        }
    }
}